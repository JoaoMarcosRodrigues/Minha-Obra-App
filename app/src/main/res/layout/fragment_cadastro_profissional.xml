<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroProfissionalFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/viewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastre-se"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"/>

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/viewTitulo">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/fotoPerfil"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_cadastro_profissional" />

                <EditText
                    android:id="@+id/editNomeCompleto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fotoPerfil"
                    android:hint="Nome completo"
                    android:layout_margin="15dp"/>

                <EditText
                    android:id="@+id/editCPF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editNomeCompleto"
                    android:hint="CPF"
                    android:layout_margin="15dp"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/viewDataNascimento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data de nascimento"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/editCPF"/>

                <EditText
                    android:id="@+id/editDataNascimento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="date"
                    android:layout_below="@+id/viewDataNascimento"
                    android:hint="Ex.: 01/01/1991"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"/>

                <EditText
                    android:id="@+id/editTelefone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:hint="Telefone"
                    android:layout_below="@+id/editDataNascimento"
                    android:layout_margin="15dp"/>

                <EditText
                    android:id="@+id/editEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:layout_below="@+id/editTelefone"
                    android:layout_margin="15dp"/>

                <EditText
                    android:id="@+id/editEspecialidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Especialidade"
                    android:layout_below="@+id/editEmail"
                    android:layout_margin="15dp"/>

                <Button
                    android:id="@+id/btnCadastrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cadastrar"
                    android:background="@drawable/round_button"
                    android:layout_below="@+id/editEspecialidade"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dp"/>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>